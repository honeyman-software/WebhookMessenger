<ContentDialog
    x:Class="WebhookMessenger.Views.TemplateManagerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Manage Templates"
    PrimaryButtonText="Close">

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*" ColumnSpacing="12" RowSpacing="12">
        <StackPanel Grid.Column="0" Spacing="8">
            <TextBlock Text="Templates" FontWeight="SemiBold"/>
            <ListView x:Name="TplList" SelectionMode="Single" Height="520" DisplayMemberPath="Name"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="8">
            <TextBox x:Name="TplName" Header="Name"/>
            <TextBox x:Name="TplContent" Header="Content" AcceptsReturn="True" Height="160"/>

            <TextBox x:Name="TplEmbeds" Header="Embeds JSON" AcceptsReturn="True"
                     TextWrapping="NoWrap" FontFamily="Consolas" Height="240"/>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Add New" Click="AddNew_Click"/>
                <Button Content="Save" Click="Save_Click"/>
                <Button Content="Delete" Click="Delete_Click"/>
            </StackPanel>

            <TextBlock x:Name="StatusText" Opacity="0.8"/>
        </StackPanel>
    </Grid>
</ContentDialog>
